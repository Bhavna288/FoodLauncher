<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/choice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/search_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="Search"
                android:layout_margin="50dp"
                android:background="@drawable/food_btn"
                android:elevation="5dp"
                android:textColor="@color/colorAccent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/random_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="Random"
                android:layout_margin="50dp"
                android:background="@drawable/food_btn"
                android:elevation="5dp"
                android:textColor="@color/colorAccent"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/random"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/colorAccent">

        <LinearLayout
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/cuisines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Cuisine"
                    android:layout_margin="20dp"
                    android:background="@drawable/selectbtn_background"
                    android:layout_below="@id/diet"
                    />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/intolerances"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Intolerances"
                    android:layout_margin="20dp"
                    android:background="@drawable/selectbtn_background"
                    android:layout_below="@+id/cuisines"
                    />

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/meal_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Meal Type"
                    android:layout_margin="20dp"
                    android:padding="20dp"
                    android:background="@drawable/selectbtn_background"
                    android:textColor="#000000"
                    />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/diet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Diet"
                    android:layout_margin="20dp"
                    android:padding="20dp"
                    android:background="@drawable/selectbtn_background"
                    android:layout_below="@id/meal_type"
                    />

                <TextView
                    android:id="@+id/selected_meal_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/montserrat"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/selected_diet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/montserrat"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/selected_cuisine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/montserrat"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/selected_intolerances"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/montserrat"
                    android:visibility="gone"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_find"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:outlineSpotShadowColor="@color/LightGray"
                android:outlineAmbientShadowColor="@color/LightGray"
                android:background="@drawable/btn_background"
                android:textColor="@color/colorAccent"
                android:src="@drawable/ic_search"
                android:layout_marginBottom="120dp"
                android:elevation="5dp"
                android:layout_below="@+id/radio"
                android:layout_gravity="center_horizontal"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/specific"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/colorAccent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/specific_meal_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Meal Type"
                android:layout_margin="20dp"
                android:background="@drawable/selectbtn_background"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/select_meal_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/montserrat"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/specific_diet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Diet"
                android:layout_margin="20dp"
                android:background="@drawable/selectbtn_background"
                android:layout_below="@id/meal_type"
                />
            <TextView
                android:id="@+id/select_diet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/montserrat"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/specific_cuisines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Cuisine"
                android:layout_margin="20dp"
                android:background="@drawable/selectbtn_background"
                android:layout_below="@id/diet"
                />
            <TextView
                android:id="@+id/select_cuisine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/montserrat"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/specific_intolerances"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Intolerances"
                android:layout_margin="20dp"
                android:background="@drawable/selectbtn_background"
                android:layout_below="@+id/cuisines"
                />
            <TextView
                android:id="@+id/select_intolerances"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/montserrat"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/btn_search_specific"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:outlineSpotShadowColor="@color/LightGray"
                android:outlineAmbientShadowColor="@color/LightGray"
                android:background="@drawable/btn_background"
                android:textColor="@color/colorAccent"
                android:src="@drawable/ic_search"
                android:layout_marginBottom="120dp"
                android:elevation="5dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_find_food"
        android:visibility="gone"/>

</FrameLayout>