<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="30dp"
    android:background="@drawable/bottomsheet_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res_name"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="20sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res_cuisines"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res_rating"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res_address"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res_phone"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res_menu"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:autoLink="web"
            android:cursorVisible="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res_timings"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res_cost_for_two"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res_table"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/call_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_background"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:paddingVertical="3dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Call" />
        <Button
            android:id="@+id/invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/call_now"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:paddingVertical="3dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Invite" />

    </RelativeLayout>

</LinearLayout>